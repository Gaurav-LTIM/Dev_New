<mvc:View controllerName="ywdynamicforms.controller.View1"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    >
        <VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleForm"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Questionare"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="1"
			emptySpanL="1"
			emptySpanM="1"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Enter Question" />
				<Input id="questionInput" placeholder=" Enter the question you wanna ask" />
				<Button text="Add" press="onAddQuestion" width="150px"/>
				<Toolbar id="questionToolbar" >
                		<Title text="Answer the Questions"/>
						<ToolbarSpacer/>
						<Button text="Submit" press="onAddQuestion" type="Emphasized" width="150px"/>
                	<ToolbarSeparator/>
            	</Toolbar>
			</f:content>
		</f:SimpleForm>
	</VBox>
        
</mvc:View>
